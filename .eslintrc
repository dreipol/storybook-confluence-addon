{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": [
    "@dreipol/eslint-config",
    "@dreipol/eslint-config-typescript",
    "plugin:react/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "react/jsx-indent": [
      "4",
      "spaces"
    ]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "globals": true
  }
}
